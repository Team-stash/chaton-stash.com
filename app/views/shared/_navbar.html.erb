<body>
  <nav class="navbar">
    <ul class="navbar-links">
       <%= link_to "Accueil", root_path %>
       <%= link_to "Catalogue", items_path %>
       <%= link_to "A propos", page_path("about")%> 
       <%= link_to "Contact", page_path("contact")%>
    </ul>

    <div class="navbar-right">

      <%= link_to image_tag("cart.png"), cart_path%>
      
      <% if authenticated? %>
      
        <%= link_to "Profile", user_path(Current.user), class: "button-link" %>

        <%= button_to "Sign out", session_path, method: :delete, class: "button-link" %>

      <% else %>
        
        <%= link_to "Sign in", new_session_path, class: "button-link" %>
          
        <%= link_to "Sign up", new_registration_path, class: "button-link" %>
      
      <% end %>
    </div>
</nav>

<!-- Notice and Alert Messages -->
  <div class="flash-messages">
    <% if flash[:alert] %>
      <div class="flash-message alert">
        <%= flash[:alert] %>
      </div>
  <% end %>
    <% if flash[:notice] %>
      <div class="flash-message notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </div>
</body>
