<h1>Votre Panier</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Produit</th>
        <th>Prix</th>
        <th>Quantité</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= number_to_currency(cart_item.item.price) %></td>
          <td>
            <%= form_with model: cart_item, method: :patch, local: true do |f| %>
              <%= f.number_field :quantity, value: cart_item.quantity, min: 1 %>
              <%= f.submit 'Mettre à jour' %>
            <% end %>
          </td>
          <td><%= number_to_currency(cart_item.total_price) %></td>
          <td>
            <%= link_to 'Retirer', cart_path(cart_item), method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Passer commande', orders_path, method: :post, class: 'btn btn-primary' %>
  <%= link_to 'Vider le panier', cart_path, method: :delete, class: 'btn btn-danger' %>
<% else %>
  <p>Votre panier est vide.</p>
<% end %>
