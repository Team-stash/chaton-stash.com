<h1>Votre Panier</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Produit</th>
        <th>Prix</th>
        <%# <th>Quantité</th> %>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= number_to_currency(cart_item.item.price) %></td>
          <td>
            <%= button_to 'Retirer', cart_path(cart_item_id: cart_item.id), method: :patch, class: 'btn btn-danger btn-sm', data: { confirm: 'Êtes-vous sûr ?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <h3>Total : <%= number_to_currency(@total_price) %></h3>
  </div>

  <%= button_to 'Passer commande', create_order_path, method: :post, class: 'btn btn-primary' %>
  <%= button_to 'Vider le panier', cart_path, method: :delete, class: 'btn btn-danger', data: { confirm: 'Êtes-vous sûr de vouloir vider le panier ?' } %>
  <%= button_to "Payer maintenant", checkout_create_path(total: @total_price), class: "btn btn-primary", data: { turbo: false } %>
<% else %>
  <p>Votre panier est vide.</p>
<% end %>
